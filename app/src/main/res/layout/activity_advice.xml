<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/activity_page"
              android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlBottomTabTopbar"
        style="@style/topbar_bg">

        <ImageButton style="@style/topbar_return_img"
            />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="意见反馈"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>


    <RelativeLayout
        style="@style/ll_horizontal_match_match"
        android:layout_marginBottom="190dp"
        android:background="@color/activity_bg"
        >

        <EditText
            android:id="@+id/adviced_ed"
           android:background="@drawable/edit_bg"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="200dp"
            android:hint="请输入反馈内容"
            android:inputType="textMultiLine"
            android:gravity="left|top"
            android:maxLines="6"
            />

        <Button
            android:id="@+id/adviced_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_big_selector"
            android:text="提交反馈"
            android:textColor="@color/white"/>
    </RelativeLayout>


</LinearLayout>