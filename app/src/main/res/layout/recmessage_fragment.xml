<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              style="@style/activity_page">


        <LinearLayout style="@style/ll_horizontal_match_wrap" >

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/rec_msg_tab"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                tl:tl_indicator_color = "#999999"
                tl:tl_indicator_gravity="BOTTOM"
                tl:tl_indicator_style="NORMAL"
                tl:tl_indicator_margin_left="25dp"
                tl:tl_indicator_margin_right="25dp"
                tl:tl_tab_space_equal="true"
                tl:tl_textAllCaps="true"
                tl:tl_textBold="BOTH"
                tl:tl_textsize="15sp"
                tl:tl_textUnselectColor="#000000"
                tl:tl_textSelectColor="#999999"
                />

        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/rec_msg_vp"
            android:layout_width="match_parent"
            android:background="@color/activity_bg"
            android:layout_height="match_parent"/>

</LinearLayout>