<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             style="@style/activity_page" >

    <LinearLayout style="@style/ll_vertical_match_match" >
        <RelativeLayout style="@style/topbar_bg" >

            <ImageButton style="@style/topbar_return_img"
                android:background="@color/black"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/user_login_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="14dp"
                android:text="设置新密码"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="25sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="14dp"
                android:text="密码"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/setpwd_account_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dip"
                    android:hint="请设置密码（6-25位数字、字母组合）"
                    android:textColorHint="@color/gray"
                    android:inputType="textPassword"
                    android:maxLines="1"/>
            </LinearLayout>
            <Button
                android:id="@+id/setpwd_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_big_selector"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="36dp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="确定" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>