<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/ll_vertical_match_wrap"
              android:background="@drawable/white_to_alpha"
              android:gravity="center" >

    <zuo.biao.library.ui.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:background="@color/alpha_3"
          android:layout_marginTop="25dp"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/ivGridItemHead"
            style="@style/match_match" />

    </zuo.biao.library.ui.SquareRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/wrap_wrap"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:text="品类:"
            />
        <TextView
            android:id="@+id/tvGridItemName"
            android:textSize="12sp"
            android:textColor="@color/green"
            style="@style/wrap_wrap"
            android:layout_gravity="left"
            android:text="玻璃"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/wrap_wrap"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:text="价格:"
            />
        <TextView
            android:id="@+id/tvGridItemTime"
            android:textSize="12sp"
            android:textColor="@color/green"
            style="@style/wrap_wrap"
            android:layout_gravity="left"
            android:text="6毛/斤"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/wrap_wrap"
            android:textColor="@color/green"
            android:textSize="13sp"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:text="预约日期:"
            />
        <TextView
            android:id="@+id/tvGridItem_personname"
            android:textSize="13sp"
            android:textColor="@color/green"
            style="@style/wrap_wrap"
            android:layout_gravity="left"
            android:text="2019-12-21"
            />
    </LinearLayout>
</LinearLayout>