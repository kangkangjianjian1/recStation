<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/white"
              style="@style/activity_page">

    <RelativeLayout
        android:id="@+id/rlBottomTabTopbar"
        style="@style/topbar_bg">

        <ImageButton style="@style/topbar_return_img"
            />
        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="成功"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>


    <RelativeLayout
        style="@style/ll_horizontal_match_match"
        android:background="@color/white"
        android:layout_marginBottom="50dp"
       >

        <ImageView
            android:id="@+id/iv_sucess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sucess"/>
        <Button
            android:id="@+id/btn_sucess"
            android:background="@drawable/btn_big_selector"
            android:text="预约成功"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</LinearLayout>