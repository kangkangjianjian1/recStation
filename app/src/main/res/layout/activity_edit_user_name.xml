<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             style="@style/activity_page">

    <LinearLayout style="@style/ll_vertical_match_match">

        <RelativeLayout style="@style/topbar_bg">

            <ImageButton style="@style/topbar_return_img"/>

            <TextView
                style="@style/topbar_title"
                android:layout_centerHorizontal="true"
                android:text="修改昵称"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray_1"/>

        <LinearLayout
            android:id="@+id/edit_username"
            style="@style/ll_horizontal_match_wrap"
            >

            <EditText
                android:id="@+id/editname_inputname"
                style="@style/text_small"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@null"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="用户昵称"
                android:textColor="@color/black"/>

            <LinearLayout
                style="@style/ll_horizontal_wrap_wrap"
                android:gravity="right"
                >

                <ImageView
                    android:id="@+id/editname_del"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="18dp"
                    android:background="@color/gray_1"
                    android:src="@drawable/cancel"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray_1"/>

        <Button
            android:id="@+id/editname_savebtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/btn_big_selector"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>


</FrameLayout>