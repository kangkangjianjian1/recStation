<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             style="@style/activity_page">

    <LinearLayout style="@style/ll_vertical_match_match">

        <RelativeLayout style="@style/topbar_bg">

            <ImageButton style="@style/topbar_return_img"/>

            <TextView
                style="@style/topbar_return_tv"
                android:layout_marginLeft="20dp"
                android:text="选择分类"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        android:background="@color/green2"/>

                    <TextView
                        style="@style/text_middle_black"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:padding="4dp"
                        android:text="品类"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selectRec_rectype"
                        style="@style/text_middle_black"
                        android:layout_gravity="right"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/green2"
                        android:text="品类"/>

                    <TextView
                        android:id="@+id/selectRec_miaoshu"
                        style="@style/text_micro_black"
                        android:layout_gravity="right"
                        android:textColor="@color/green2"
                        android:layout_marginLeft="3dp"
                        android:text="描述"/>

                    <TextView
                        android:id="@+id/selectRec_price"
                        style="@style/text_micro_black"
                        android:textColor="@color/green2"
                        android:layout_gravity="right"
                        android:layout_marginLeft="3dp"
                        android:text="行情价格"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        android:background="@color/green"/>

                    <TextView
                        style="@style/text_middle_black"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:padding="4dp"
                        android:text="服务地址"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adress_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/selectRec_phone"
                            style="@style/text_micro_black"
                            android:layout_gravity="left"
                            android:layout_marginLeft="9dp"
                            android:padding="6dp"
                            android:text="电话:136000000631"/>

                        <TextView
                            android:id="@+id/selectRec_adress"
                            style="@style/text_micro_black"
                            android:layout_marginLeft="9dp"
                            android:layout_gravity="left"
                            android:padding="6dp"
                            android:text="收货地址:收货地址收货地收货地址收a"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:minWidth="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="right"
                        >
                    <ImageView
                        style="@style/wrap_wrap"
                        android:layout_gravity="end"
                        android:src="@drawable/right_arrow"
                        />
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="7dp"
                        android:layout_height="match_parent"
                        android:background="@color/green"/>

                    <TextView
                        style="@style/text_middle_black"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:padding="4dp"
                        android:text="预约时间"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/selectRec_datetime_click"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/selectRec_datetime"
                        style="@style/text_small_black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="请选择"/>
                    <ImageView
                        style="@style/wrap_wrap"
                        android:layout_gravity="end"
                        android:src="@drawable/right_arrow"/>
                </LinearLayout>

            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
           style="@style/text_micro"
           android:textColor="@color/gray_1"
           android:gravity="left"
           android:padding="10dp"
           android:text="温馨提示:系统会为您匹配您的住址附近的回收商家，请保持联系方式通畅。"

            />
    </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</FrameLayout>