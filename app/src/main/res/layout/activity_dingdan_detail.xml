<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              style="@style/activity_page">

    <RelativeLayout style="@style/topbar_bg" >

        <ImageButton style="@style/topbar_return_img" />
        <TextView
            style="@style/topbar_return_tv"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:text="返回"/>

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="预约订单详细" />

        <!--<Button-->
            <!--style="@style/topbar_right_btn"-->
            <!--android:textColor="@color/black"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:text="点击发布" />-->

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>
    <LinearLayout style="@style/ll_horizontal_match_wrap" >

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/dingdan_detail_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            tl:tl_indicator_color = "#999999"
            tl:tl_indicator_gravity="BOTTOM"
            tl:tl_indicator_style="NORMAL"
            tl:tl_indicator_margin_left="8dp"
            tl:tl_indicator_margin_right="8dp"
            tl:tl_tab_space_equal="true"
            tl:tl_textAllCaps="true"
            tl:tl_textBold="BOTH"
            tl:tl_textsize="13sp"
            tl:tl_textUnselectColor="#000000"
            tl:tl_textSelectColor="#999999"
            />

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/dingdan_detail_vp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"/>

</LinearLayout>